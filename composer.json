{
    "name": "haiju/api-signature",
    "description": "Laravel API signature verification middleware for secure API communication",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "signature",
        "api",
        "middleware",
        "verification",
        "security"
    ],
    "authors": [
        {
            "name": "Haiju",
            "email": "developer@91haiju.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "laravel/framework": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Haiju\\ApiSignature\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Haiju\\ApiSignature\\SignatureServiceProvider"
            ],
            "aliases": {
                "ApiSignature": "Haiju\\ApiSignature\\Facades\\ApiSignature"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}